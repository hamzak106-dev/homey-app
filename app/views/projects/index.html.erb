<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Projects</h2>
    <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
  </div>

  <% if @projects.any? %>
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= project.name %></h5>
              <p class="card-text"><strong>Status:</strong> <%= project.status %></p>
              <p class="card-text">
                <strong>Owner:</strong>
                <%= project.user.present? ? "#{project.user.first_name} #{project.user.last_name}" : "Unknown" %>
              </p>
              <div class="d-flex justify-content-between">
                <%= link_to "View", project_path(project), class: "btn btn-info btn-sm" %>
                <%= link_to "Edit", edit_project_path(project), class: "btn btn-warning btn-sm" %>
                <%= link_to "Delete", project_path(project), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-warning">No projects available.</div>
  <% end %>
</div>
